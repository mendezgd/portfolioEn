---
const personalImageAlt = "Gustavo Mendez";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/perfil.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/gmendez1988/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Gustavo D. Mendez
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-blue-400 [&>strong]:text-blue-800 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong> Frontend Developer</strong>, In Buenos Aires, Argentina, I
    specialize in designing and developing innovative and personalized web
    pages.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:mendezgd88@gmail.com">
      <MailIcon class="size-4" />
      Contact
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/gmendez1988/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
